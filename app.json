{
  "expo": {
    "name": "Schooling",
    "slug": "school-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": ["schooling"],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "hermes",

    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.schoolingsocial.schooling.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to let users scan QR codes for school assignments.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library so you can upload images and videos.",
        "NSPhotoLibraryAddUsageDescription": "We need permission to save media to your photo library.",
        "UIBackgroundModes": ["remote-notification"],
        "UIStatusBarStyle": "automatic",
        "LSApplicationQueriesSchemes": ["schooling", "http", "https"],
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.associated-domains": [
          "applinks:schoolingsocial.com"
        ]
      }
    },

    "android": {
      "versionCode": 2,
      "package": "com.schoolingsocial.schooling.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "schoolingsocial.com",
              "pathPrefix": "/home"
            },
            {
              "scheme": "https",
              "host": "www.schoolingsocial.com",
              "pathPrefix": "/home"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      "expo-video",
      "expo-camera",
      "expo-audio",
      [
        "expo-build-properties",
        {
          "android": {
            "windowSoftInputMode": "adjustResize"
          }
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "e3553066-167e-4d82-85cb-257822e3b233"
      }
    }
  }
}
